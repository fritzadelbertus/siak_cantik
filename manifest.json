{
    "manifest_version": 3,
    "name": "SIAK-CANTIK",
    "description": "Add modern styling to the old SIAK-NG",
    "version": "1.0",
    "icons": {
        "16": "logo/16x16.png",
        "32": "logo/32x32.png",
        "48": "logo/48x48.png",
        "128": "logo/128x128.png"
    },
    "background": {
    "service_worker": "background.js"
    },
    "action": {
    "default_icon": {
        "16": "logo/16x16.png",
        "32": "logo/32x32.png",
        "48": "logo/48x48.png",
        "128": "logo/128x128.png"
        }
    },
    "permissions": ["activeTab", "tabs", "scripting", "*://*/*" ],
    "web_accessible_resources": [
        {
            "resources": [ "profile.png" ],
            "matches": [ "https://*/*" ]
        },
        {
            "resources": [ "rubik_mono_one.ttf" ],
            "matches": [ "https://*/*" ]
        }
    ],
    "host_permissions": [
    "http://*/*",
    "https://*/*"
    ]
}
  